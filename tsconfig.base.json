{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "baseUrl": ".",
    "paths": {
      "@duri-fe/ui/*": ["packages/ui/src/*"],
      "@duri-fe/utils/*": ["packages/utils/src/*"]
    }
  },
  "references": [
    { "path": "apps/admin" },
    { "path": "apps/duri" },
    { "path": "apps/salon" },
    { "path": "packages/ui" },
    { "path": "packages/utils" }
  ],
  "include": ["apps/**/*", "packages/**/*", "custom.d.ts"],
  "exclude": ["node_modules", "dist"]
}
